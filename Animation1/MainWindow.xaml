<Window x:Class="Animation1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Animation1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="256*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Name="ButtonHeight" Click="ButtonHeight_Click">Увеличить высоту</Button>
            <Button Name="ButtonWidth" Click="ButtonWidth_Click">Увеличить ширину</Button>
            <Button Name="ButtonReset" Click="ButtonReset_Click">Отменить</Button>
        </StackPanel>
        <Rectangle Name="Rect" Fill="Green"
                   Grid.Row="1" Width="100" Height="100"/>
    </Grid>
</Window>
